<h1>Search Servers</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form-inline" method="POST" action="/server/search">
  <div class="form-group">
    <input type="text" name="id" class="form-control" placeholder="Search Servers by serverName">
  </div>
  <input type="submit" class="btn btn-primary" value="Search">
</form>
